<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> O nama - Izmeni sekciju o nama</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="?page=home-admin">Pocetna</a></li>
            <li><i class="fa fa-laptop"></i>O nama</li>
        </ol>
    </div>
</div>
<section class="panel">
    <div class="panel-body">
        <form class="form-horizontal" action="" method="post" id="about-form">
            <div class="form-group">

                <label class="control-label col-lg-2" for="inputSuccess">Izaberi jezik: </label>
                <div class="col-lg-10">
                    <select class="form-control m-bot15" id="language-chooser">
                        <option value="srb">Srpski</option>
                        <option value="sk">Slovački</option>
                        <option value="en">Engleski</option>
                    </select>

                    <label class="control-label col-lg-2" for="inputSuccess">Izmeni naslov: </label>
                    <input class="form-control input-lg m-bot15" id="title" type="text" placeholder="Izmeni naslov"
                           value="{{ aboutUsTitle }}"/>
                    <label class="control-label col-lg-2" for="inputSuccess">Izmeni podnaslov: </label>
                    <input class="form-control m-bot15" id="subtitle" type="text" placeholder="Izmeni podnaslov"
                           value="{{ aboutUsSubtitle }}"/>

                </div>
            </div>
        </form>
    </div>

</section>

<div class="row">

    <!-- CKEditor -->
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Izmeni sadržaj
            </header>
            <div class="panel-body">
                <div class="form">
                    <div class="form-group">
                        <label class="control-label col-sm-2">Unesi tekst: </label>
                        <div class="col-sm-10">
                            <textarea class="form-control ckeditor" name="editor1" rows="10" id="about-text">{{ aboutUs }}</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <button class="btn btn-primary" type="button" id="save-about-us">Ažuriraj sekciju</button>
    </div>

</div>



