<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">{{ ACTIVITIES_SECTION_INTRO }}</h2>
            <h3 class="section-subheading text-muted">Saznajte više o našim aktivnostima.</h3>
        </div>

        {% for project in projects %}
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a href="#projectModal1" class="portfolio-link" data-toggle="modal" data-project-id="{{ project.project_id }}" data-lang="{{ projects[0].lang }}">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>

                    <img src="assets/img/projects/{{ project.image }}" class="img-responsive" alt="">
                </a>
                <div class="portfolio-caption">
                    <h4>{{ project.title }}</h4>
                    <p class="text-muted">{{ project.text }}</p>
                </div>
            </div>
        {% endfor %}

    </div>
</div>

<div class="container">

    <!-- Project Modal 1 -->
    <div class="portfolio-modal modal fade" id="projectModal1" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="modal-body">
                            <h2 id="project-title"></h2>
                            <p class="item-intro text-muted project-subtitle"></p>

                            <p class="project-content"></p>

                            <button type="button" class="btn btn-primary" data-dismiss="modal">Zatvori</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
