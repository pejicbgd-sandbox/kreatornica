<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Galerija</h2>
            <h3 class="section-subheading text-muted">Saznajte više o našim aktivnostima.</h3>
        </div>

        {% for index, gallery in galleries %}
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a class="fancybox portfolio-link" rel="gallery{{index}}" href="{{ gallery.folder }}head.jpg">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img src="{{ gallery.folder }}head.jpg" class="img-responsive gallery-head-img" alt=""/>
                </a>

                <div class="portfolio-caption">
                    <h4>{{ gallery.data.title}}</h4>
                    <p class="text-muted">{{ gallery.data.text}}</p>
                    <p class="text-muted">{{ gallery.data.content}}</p>
                </div>

                {% for image in gallery.images %}
                    {% if('thumb' not in image) %}
                        <div class="hidden">
                            <a class="fancybox" rel="gallery{{index}}" href="{{ image }}" title="" >
                                <img src="{{ image }}" alt=""/>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>
